<% content_for :head do %>
  <title><%= @item.title %> - Monolist</title>
  <description><%= @item.title %>に関する情報、と言っても特に役立つ情報はありませんのであしからず。</description>
<% end %>

<div class="container">
  <div class="container-inner inner-sm clearfix">
    <div class="item-single-main">
      <div class="image">
        <div class="img-wrap">
          <% #TODO 商品イメージ %>
          <% if @item.large_image %>
          <%= image_tag(@item.large_image, alt: @item.title) %>
          <% else %>
          <%= image_tag("no-image.png") %>
          <% end %>
        </div>
      </div>
      <div class="title">
        <% #TODO 商品タイトル %>
        <%= @item.title %>
      </div>
      <%= render 'action' , item: @item %>
    </div>
    <div class="item-single-side">
      <div class="side-box">
        <h4 class="side-box-title">Haveしたユーザー</h4>
        <div class="side-box-body">
          <% # TODO Haveしたユーザー一覧 %>
        <% if @haves.any? %>
          <% @haves.each do |f| %>
          <%= link_to (gravatar_for f, size: 30), f %>
          <% end %>
        <% end %>
        </div>
      </div>
      <div class="side-box">
        <h4 class="side-box-title">Wantしたユーザー</h4>
        <div class="side-box-body">
          <% # TODO Wantしたユーザー一覧 %>
        <% if @wants.any? %>
          <% @wants.each do |f| %>
          <%= link_to (gravatar_for f, size: 30), f %>
          <% end %>
        <% end %> 
        </div>
      </div>
      <div class="text-center">
        <% #TODO 正しいリンク先に %>
        <%= link_to image_tag("amazon-button.png", {alt: "Amazon詳細ページへ"}), @item.detail_page_url, target: "_blank" %>
      </div>
    </div>
  </div>
</div>